@model MalArriadas.Models.Marca
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-5 text-uppercase text-start">Editar <span class="text-warning">@Model.Nombre</span></h1>
<form action="Create" method="post">
    <input asp-for="Marca_Id" hidden="hidden" />
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 offset-2">
            <div class="form-group row mb-3 mt-3">
                <div class="col-4">
                    <label asp-for="Nombre" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-success form-control"> Editar</button>
                            &nbsp;
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger form-control">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
