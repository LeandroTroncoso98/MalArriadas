@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row mt-5">
        <div class="col-6">
            <h2 class="text-center text-uppercase">Lista de categorías</h2>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-success mb-5"><i class="fas fa-plus"> Crear Categoría</i></a>
        </div>
    </div>
</div>
<table id="tblCategorias" class="table table-striped table-bordered" style="width:100%;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>
@section Scripts{
    <script src="~/js/Categoria.js"></script>
}

